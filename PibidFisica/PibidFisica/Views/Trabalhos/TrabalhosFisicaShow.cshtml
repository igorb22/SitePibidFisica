@model IEnumerable<Models.TrabalhoModel>

@{
    ViewData["Title"] = "TrabalhosFisicaShow";
}

<table style="width: 100%">
    <tr>
        <td>
            <h2>Produções do Física Show</h2>
        </td>

        <td>
            <div style="text-align: right">
                <div class="btn-group" role="group">
                    <a asp-area="" class="btn btn-primary" asp-controller="Home" asp-action="FisicaShow">Home</a>
                    <a asp-area="" class="btn btn-primary " asp-controller="Evento" asp-action="EventosFisicaShow">Participações em Eventos</a>
                </div>
            </div>
        </td>
    </tr>
</table>

<div>
    <br />
    <div align="right">
        <form asp-controller="Trabalhos" asp-action="Index">
            <p>
                <input style="height: 25pt;width: 200pt;" type="text" placeholder="Pesquise por um titulo " name="pesquisa">
                <button style="margin-bottom: 0.3%;" class="btn btn-primary text-right">Pesquisar</button>

            </p>
        </form>
    </div>



    <ul style="margin:0; padding:0; list-style:none;">
        @if (Model.Count() == 0)
        {
            <hr />

            <li style="color: orangered">
                Nenhum trabalho foi encontrado.
            </li>
        }
        else
        {
            @foreach (var item in Model)
            {
                <hr />

                <li style=" display:inline; float: inherit; width:6em;">
                    <h4> @item.Titulo </h4>
                    <div>@item.Autores </div>
                    <a href="@item.Link" target="_blank" title="@item.Titulo">Ver publicação</a>
                </li>
            }
        }
    </ul>
</div>
